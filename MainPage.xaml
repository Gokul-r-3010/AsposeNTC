<Page
    x:Class="AsposeNTC.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AsposeNTC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button
            x:Name="SetLicense"
            Click="SetLicense_Click"
            Content="Set License" />
        <TextBlock x:Name="TB1" Grid.Row="1" />
        <Button
            x:Name="ReadPST"
            Grid.Row="2"
            Click="ReadPST_Click"
            Content="Read PST" />
        <TextBlock x:Name="TB2" Grid.Row="3" />
        <Button
            x:Name="ReadEML"
            Grid.Row="4"
            Click="ReadEML_Click"
            Content="Read EML" />
        <TextBlock x:Name="TB3" Grid.Row="5" />
    </Grid>
</Page>
